<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BillActivity">

    <TextView
        android:id="@+id/tvBill"
        android:text="Your Bill"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvNoOfDays"
        android:text="No. of days"
        android:textSize="20sp"
        android:layout_below="@+id/tvBill"
        android:paddingLeft="10dp"
        android:layout_width="150dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvNoOfDaysVal"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/tvBill"
        android:layout_toRightOf="@+id/tvNoOfDays"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />


    <TextView
        android:id="@+id/tvAdults"
        android:layout_below="@+id/tvNoOfDays"
        android:layout_marginLeft="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:text="Adults: "
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvAdultsPrice"
        android:layout_marginLeft="150dp"
        android:layout_below="@+id/tvNoOfDays"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvAdults"
        android:textSize="20sp"
        android:gravity="center_horizontal" />


    <TextView
        android:id="@+id/tvChildren"
        android:text="Children (50% Discount): "
        android:layout_below="@+id/tvAdults"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvChildrenPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAdultsPrice"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/tvChildren"
        android:textSize="20sp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_marginLeft="10dp"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/tvChildren"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Total: "/>

    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/tvChildren"
        android:layout_toRightOf="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvTax"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="Tax 13%: "
        android:layout_below="@+id/tvTotal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTaxPrice"
        android:layout_margin="10dp"
        android:layout_below="@+id/tvTotal"
        android:layout_toRightOf="@+id/tvTax"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvGrandTotal"
        android:layout_marginLeft="10dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/tvTax"
        android:text="Grand Total :"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvGrandTotalPrice"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:layout_below="@+id/tvTax"
        android:layout_toRightOf="@+id/tvGrandTotal"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

</RelativeLayout>